# Server Configuration
PORT=3000
HOST=0.0.0.0

# Security - API Key for Salesforce to authenticate
API_KEY=your-secure-api-key-here

# Your application URL (for OAuth callbacks)
# For Heroku, this is automatically constructed from HEROKU_APP_NAME if not set
# APP_URL=https://your-heroku-app.herokuapp.com

# Logging
LOG_LEVEL=info

# MCP Server Configuration (JSON format)
# You can configure multiple MCP servers with different auth types
# 
# Authentication types:
#   - "none": No authentication
#   - "api-key": Uses X-API-Key header
#   - "bearer-token": Uses Authorization: Bearer header
#   - "oauth2": OAuth 2.0 Authorization Code flow with PKCE (for remote servers like Atlassian)
#   - "oauth2-client-credentials": OAuth 2.0 Client Credentials grant
#
# Example with Atlassian Remote MCP Server:
# MCP_SERVERS='{
#   "atlassian": {
#     "url": "https://mcp.atlassian.com/v1/sse",
#     "transport": "sse",
#     "authType": "oauth2",
#     "oauth": {
#       "clientId": "YOUR_ATLASSIAN_OAUTH_CLIENT_ID",
#       "scopes": ["read:jira-work", "write:jira-work", "read:confluence-content.all"]
#     }
#   }
# }'
#
# Basic example:
MCP_SERVERS={"default": {"url": "https://your-mcp-server.com/sse", "transport": "sse"}}

# Optional: Default timeout for MCP operations (in milliseconds)
MCP_TIMEOUT=30000

# Optional: Enable CORS for specific origins (comma-separated)
CORS_ORIGINS=*
